<jqa-plugin:jqassistant-plugin xmlns:jqa-plugin="http://www.buschmais.com/jqassistant/core/plugin/schema/v1.0"
                               name="Common Test">
    <description>Provides test types.</description>
    <model>
        <class>com.buschmais.jqassistant.plugin.common.test.scanner.model.DependentDirectoryDescriptor</class>
        <class>com.buschmais.jqassistant.plugin.common.test.rule.model.TestDescriptor</class>
    </model>
    <scanner>
        <class>com.buschmais.jqassistant.plugin.common.test.scanner.DependentDirectoryScannerPlugin</class>
    </scanner>
    <rules>
        <resource>script.xml</resource>
        <resource>script.adoc</resource>
        <resource>aggregation.xml</resource>
    </rules>
</jqa-plugin:jqassistant-plugin>