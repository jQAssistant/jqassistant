<jq:jqassistant-rules xmlns:jq="http://www.buschmais.com/jqassistant/core/analysis/rules/schema/v1.0">

    <!-- Queries -->
    <queryDefinition id="queryDefinition">
        <description>A query definition</description>
        <cypher>A pre-defined cypher query</cypher>
        <parameterDefinition name="parameter0" type="int" default="5"/>
        <parameterDefinition name="parameter1" type="string" default="defaultValue"/>
    </queryDefinition>

    <!-- Concepts -->
    <concept id="conceptUsingQueryDefinitionAndDefaultParameters">
        <description>A concept which references the query definition.</description>
        <useQueryDefinition refId="queryDefinition"/>
    </concept>

    <concept id="conceptUsingQueryDefinitionAndCustomParameters">
        <description>A concept which references the query definition using custom parameters.</description>
        <useQueryDefinition refId="queryDefinition"/>
        <parameter name="parameter0" type="int" value="10"/>
        <parameter name="parameter1" type="string" value="customValue"/>
    </concept>

    <concept id="conceptUsingCustomQuery">
        <description>A concept which uses a custom query.</description>
        <cypher>customQuery</cypher>
        <parameter name="parameter0" type="int" value="15"/>
        <parameter name="parameter1" type="string" value="value"/>
    </concept>

    <concept id="conceptRequiringConcept">
        <requiresConcept refId="conceptUsingCustomQuery"/>
        <description>A concept which requires another concept.</description>
        <cypher>customQuery</cypher>
        <parameter name="parameter0" type="int" value="15"/>
        <parameter name="parameter1" type="string" value="value"/>
    </concept>

    <!-- Constraints -->

    <constraint id="constraintUsingQueryDefinitionAndDefaultParameters">
        <description>A constraint which references the query definition.</description>
        <useQueryDefinition refId="queryDefinition"/>
    </constraint>

    <constraint id="constraintUsingQueryDefinitionAndCustomParameters">
        <description>A constraint which references the query definition using custom parameters.</description>
        <useQueryDefinition refId="queryDefinition"/>
        <parameter name="parameter0" type="int" value="10"/>
        <parameter name="parameter1" type="string" value="customValue"/>
    </constraint>

    <constraint id="constraintUsingCustomQuery">
        <description>A constraint which uses a custom query.</description>
        <cypher>customQuery</cypher>
        <parameter name="parameter0" type="int" value="15"/>
        <parameter name="parameter1" type="string" value="value"/>
    </constraint>

    <constraint id="constraintRequiringConcept">
        <requiresConcept refId="conceptUsingCustomQuery"/>
        <description>A constraint which requires a concept.</description>
        <cypher>customQuery</cypher>
        <parameter name="parameter0" type="int" value="15"/>
        <parameter name="parameter1" type="string" value="value"/>
    </constraint>

    <!-- Constraint Groups -->

    <constraintGroup id="continuous">
        <includeConstraint refId="constraintRequiringConcept"/>
    </constraintGroup>

    <constraintGroup id="integration">
        <includeConstraintGroup refId="continuous"/>
    </constraintGroup>

</jq:jqassistant-rules>