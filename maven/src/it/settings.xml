<?xml version="1.0" encoding="UTF-8"?>
<settings>
	<pluginGroups>
		<pluginGroup>@project.groupId@</pluginGroup>
	</pluginGroups>
	<profiles>
		<profile>
			<id>it-repo</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<repositories>
				<repository>
					<id>local.central</id>
					<url>file://@localRepository@</url>
					<releases>
						<enabled>true</enabled>
						<checksumPolicy>ignore</checksumPolicy>
					</releases>
					<snapshots>
						<enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
						<checksumPolicy>ignore</checksumPolicy>
					</snapshots>
				</repository>
			</repositories>
			<pluginRepositories>
				<pluginRepository>
					<id>local.central</id>
					<url>file://@localRepository@</url>
					<releases>
						<enabled>true</enabled>
						<checksumPolicy>ignore</checksumPolicy>
					</releases>
					<snapshots>
						<enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
						<checksumPolicy>ignore</checksumPolicy>
					</snapshots>
				</pluginRepository>
			</pluginRepositories>
		</profile>
	</profiles>
</settings>
