<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.buschmais.jqassistant</groupId>
        <artifactId>neo4jserver</artifactId>
        <version>1.3.0</version>
    </parent>

    <artifactId>neo4jserver.embedded</artifactId>

    <name>jQAssistant Embedded Neo4j Server</name>
    <url>http://jqassistant.org/</url>

    <description>
        Provides an embedded Neo4j Server on top of a jQAssistant instance.
    </description>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>com.buschmais.jqassistant</groupId>
            <artifactId>neo4jserver.bootstrap</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.buschmais.jqassistant.plugin</groupId>
            <artifactId>common</artifactId>
            <version>${jqa-plugin-common.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.buschmais.jqassistant.plugin</groupId>
            <artifactId>common</artifactId>
            <type>test-jar</type>
            <version>${jqa-plugin-common.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
            <version>4.12</version>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>java-hamcrest</artifactId>
            <version>2.0.0.0</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>neo4jv2</id>
            <activation>
                <property>
                    <name>!jqassistant.neo4jVersion</name>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>com.buschmais.jqassistant</groupId>
                    <artifactId>neo4jserver.neo4jv2</artifactId>
                    <version>${project.version}</version>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>neo4jv3</id>
            <activation>
                <property>
                    <name>jqassistant.neo4jVersion</name>
                    <value>3</value>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>com.buschmais.jqassistant</groupId>
                    <artifactId>neo4jserver.neo4jv3</artifactId>
                    <version>${project.version}</version>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

</project>
