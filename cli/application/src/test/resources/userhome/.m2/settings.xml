<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <localRepository>~/local-repo</localRepository>

    <mirrors>
        <mirror>
            <url>default-mirror-host</url>
            <mirrorOf>central</mirrorOf>
        </mirror>
        <mirror>
            <id>private-mirror</id>
            <url>private-mirror-host</url>
            <mirrorOf>*</mirrorOf>
        </mirror>
    </mirrors>

    <proxies>
        <proxy>
            <protocol>https</protocol>
            <host>active-proxy-host</host>
            <port>3128</port>
            <username>foo</username>
            <password>bar</password>
            <nonProxyHosts>internal-host</nonProxyHosts>
        </proxy>
        <proxy>
            <active>false</active>
            <host>inactive-proxy-host</host>
        </proxy>
    </proxies>

    <servers>
        <server>
            <id>private-mirror</id>
            <username>mirror-foo@bar.com</username>
            <password>mirror-top-secret</password>
        </server>
        <server>
            <id>private-repo</id>
            <username>repo-foo@bar.com</username>
            <password>repo-top-secret</password>
        </server>
    </servers>

    <activeProfiles>
        <activeProfile>public</activeProfile>
    </activeProfiles>

    <profiles>
        <profile>
            <id>public</id>
            <properties>
                <custom>my-value</custom>
            </properties>
            <repositories>
                <repository>
                    <id>public</id>
                    <url>https://public-repo.acme.com/</url>
                </repository>
            </repositories>
        </profile>
        <profile>
            <id>private</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <pluginRepositories>
                <pluginRepository>
                    <id>private-repo</id>
                    <url>https://private-repo.acme.com/</url>
                </pluginRepository>
            </pluginRepositories>
        </profile>
        <profile>
            <id>user-profile</id>
            <properties>
                <jqassistant.skip>true</jqassistant.skip>
            </properties>
        </profile>
    </profiles>

</settings>
