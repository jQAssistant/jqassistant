<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.buschmais.jqassistant</groupId>
        <artifactId>jqa-uber-parent</artifactId>
        <version>1.13.0-SNAPSHOT</version>
        <relativePath/>
    </parent>

    <groupId>com.buschmais.jqassistant</groupId>
    <artifactId>jqa-distribution-specification</artifactId>
    <version>2.0.0-SNAPSHOT</version>

    <name>jQAssistant Distribution Specification</name>
    <url>https://jqassistant.org/</url>

    <packaging>pom</packaging>
    <inceptionYear>2016</inceptionYear>

    <description>
        This POM specifies the version of all modules of jQAssistant which will be part of the commandline distribution
        of jQAssistant and dependencies of the Maven plugin of jQAssistant.
    </description>

    <organization>
        <name>jQAssistant Development Team</name>
        <url>https://jqassistant.org</url>
    </organization>

    <licenses>
        <license>
            <name>GNU General Public License, v3</name>
            <url>https://www.gnu.org/licenses/gpl-3.0.html</url>
        </license>
    </licenses>

    <scm>
        <connection>scm:git:git@github.com:jqassistant/jqa-distribution-specification.git</connection>
        <developerConnection>scm:git:git@github.com:jqassistant/jqa-distribution-specification.git</developerConnection>
        <url>https://github.com/jqassistant/jqa-distribution-specification</url>
      <tag>HEAD</tag>
  </scm>


    <properties>
        <!--
         ! Version of the commandline tool
         ! It is used only to include the correct version of
         ! the documentation of the commandline tool in the user manual.
         !-->
        <jqa-commandline-tool.version>1.13.0-SNAPSHOT</jqa-commandline-tool.version>

        <!--
         ! Version of the Plugin of Apache Maven.
         ! It is used only to include the correct version of
         ! the documentation of the commandline tool in the user manual.
         !-->
        <jqa-maven-plugin.version>1.13.0-SNAPSHOT</jqa-maven-plugin.version>

        <!--
         ! Versions of the plugins to be included in a release.
         !-->
        <jqa-core-framework.version>1.13.0-SNAPSHOT</jqa-core-framework.version>
        <jqa-java-plugin.version>1.13.0-SNAPSHOT</jqa-java-plugin.version>
        <jqa-json-plugin.version>1.13.0-SNAPSHOT</jqa-json-plugin.version>
        <jqa-junit-plugin.version>1.13.0-SNAPSHOT</jqa-junit-plugin.version>
        <jqa-own-constraints.version>1.13.0-SNAPSHOT</jqa-own-constraints.version>
        <jqa-maven3-plugin.version>1.13.0-SNAPSHOT</jqa-maven3-plugin.version>
        <jqa-neo4jbackend.version>1.13.0-SNAPSHOT</jqa-neo4jbackend.version>
        <jqa-plugin-common.version>1.13.0-SNAPSHOT</jqa-plugin-common.version>
        <jqa-yaml2-plugin.version>1.13.0-SNAPSHOT</jqa-yaml2-plugin.version>
        <jqa-xml-plugin.version>1.13.0-SNAPSHOT</jqa-xml-plugin.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>com.buschmais.jqassistant</groupId>
                <artifactId>jqassistant-maven-plugin</artifactId>
                <configuration>
                    <groups>
                        <group>jqa-legal</group>
                        <group>jqa-maven-constraints</group>
                        <group>jqa-maven-dependency-constraints</group>
                        <group>jqa-project-layout</group>
                    </groups>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>com.buschmais.jqassistant</groupId>
                        <artifactId>github-integration</artifactId>
                        <version>${jqa-own-constraints.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>com.buschmais.jqassistant</groupId>
                        <artifactId>legal-constraints</artifactId>
                        <version>${jqa-own-constraints.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>com.buschmais.jqassistant</groupId>
                        <artifactId>project-layout-constraints</artifactId>
                        <version>${jqa-own-constraints.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>com.buschmais.jqassistant</groupId>
                        <artifactId>maven-commmon-constraints</artifactId>
                        <version>${jqa-own-constraints.version}</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.buschmais.jqassistant.core</groupId>
                <artifactId>parent</artifactId>
                <version>${jqa-core-framework.version}</version>
                <type>zip</type>
                <classifier>asciidoc</classifier>
                <scope>provided</scope>
                <exclusions>
                    <exclusion>
                        <artifactId>*</artifactId>
                        <groupId>*</groupId>
                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
                <groupId>com.buschmais.jqassistant.core</groupId>
                <artifactId>configuration</artifactId>
                <version>${jqa-core-framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.buschmais.jqassistant.core</groupId>
                <artifactId>analysis</artifactId>
                <version>${jqa-core-framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.buschmais.jqassistant.core</groupId>
                <artifactId>scanner</artifactId>
                <version>${jqa-core-framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.buschmais.jqassistant.core</groupId>
                <artifactId>store</artifactId>
                <version>${jqa-core-framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.buschmais.jqassistant.core</groupId>
                <artifactId>report</artifactId>
                <version>${jqa-core-framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.buschmais.jqassistant.core</groupId>
                <artifactId>rule</artifactId>
                <version>${jqa-core-framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.buschmais.jqassistant.core</groupId>
                <artifactId>shared</artifactId>
                <version>${jqa-core-framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.buschmais.jqassistant.core</groupId>
                <artifactId>plugin</artifactId>
                <version>${jqa-core-framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.buschmais.jqassistant.neo4jserver</groupId>
                <artifactId>neo4jv3</artifactId>
                <version>${jqa-neo4jbackend.version}</version>
            </dependency>
            <dependency>
                <groupId>com.buschmais.jqassistant.neo4jserver</groupId>
                <artifactId>parent</artifactId>
                <version>${jqa-neo4jbackend.version}</version>
                <type>zip</type>
                <classifier>asciidoc</classifier>
                <scope>provided</scope>
                <exclusions>
                    <exclusion>
                        <artifactId>*</artifactId>
                        <groupId>*</groupId>
                    </exclusion>
                </exclusions>
            </dependency>


            <!--
             ! Plugin dependencies for the command line distribution
             ! and of the jQAssistant Maven plugin
             !-->
            <dependency>
                <groupId>com.buschmais.jqassistant.plugin</groupId>
                <artifactId>yaml2</artifactId>
                <version>${jqa-yaml2-plugin.version}</version>
            </dependency>
            <dependency>
                <groupId>com.buschmais.jqassistant.plugin</groupId>
                <artifactId>yaml2</artifactId>
                <version>${jqa-yaml2-plugin.version}</version>
                <type>zip</type>
                <classifier>asciidoc</classifier>
                <scope>provided</scope>
                <exclusions>
                    <exclusion>
                        <artifactId>*</artifactId>
                        <groupId>*</groupId>
                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
                <groupId>com.buschmais.jqassistant.plugin</groupId>
                <artifactId>json</artifactId>
                <version>${jqa-json-plugin.version}</version>
            </dependency>
            <dependency>
                <groupId>com.buschmais.jqassistant.plugin</groupId>
                <artifactId>json</artifactId>
                <version>${jqa-json-plugin.version}</version>
                <type>zip</type>
                <classifier>asciidoc</classifier>
                <scope>provided</scope>
                <exclusions>
                    <exclusion>
                        <artifactId>*</artifactId>
                        <groupId>*</groupId>
                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
                <groupId>com.buschmais.jqassistant.plugin</groupId>
                <artifactId>junit</artifactId>
                <version>${jqa-junit-plugin.version}</version>
            </dependency>
            <dependency>
                <groupId>com.buschmais.jqassistant.plugin</groupId>
                <artifactId>junit</artifactId>
                <version>${jqa-junit-plugin.version}</version>
                <type>zip</type>
                <classifier>asciidoc</classifier>
                <scope>provided</scope>
                <exclusions>
                    <exclusion>
                        <artifactId>*</artifactId>
                        <groupId>*</groupId>
                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
                <groupId>com.buschmais.jqassistant.plugin</groupId>
                <artifactId>xml</artifactId>
                <version>${jqa-xml-plugin.version}</version>
            </dependency>
            <dependency>
                <groupId>com.buschmais.jqassistant.plugin</groupId>
                <artifactId>xml</artifactId>
                <version>${jqa-xml-plugin.version}</version>
                <type>zip</type>
                <classifier>asciidoc</classifier>
                <scope>provided</scope>
                <exclusions>
                    <exclusion>
                        <artifactId>*</artifactId>
                        <groupId>*</groupId>
                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
                <groupId>com.buschmais.jqassistant.plugin</groupId>
                <artifactId>common</artifactId>
                <version>${jqa-plugin-common.version}</version>
            </dependency>
            <dependency>
                <groupId>com.buschmais.jqassistant.plugin</groupId>
                <artifactId>common</artifactId>
                <version>${jqa-plugin-common.version}</version>
                <type>zip</type>
                <classifier>asciidoc</classifier>
                <scope>provided</scope>
                <exclusions>
                    <exclusion>
                        <artifactId>*</artifactId>
                        <groupId>*</groupId>
                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
                <groupId>com.buschmais.jqassistant.plugin</groupId>
                <artifactId>java</artifactId>
                <version>${jqa-java-plugin.version}</version>
            </dependency>
            <dependency>
                <groupId>com.buschmais.jqassistant.plugin</groupId>
                <artifactId>java</artifactId>
                <version>${jqa-java-plugin.version}</version>
                <type>zip</type>
                <classifier>asciidoc</classifier>
                <scope>provided</scope>
                <exclusions>
                    <exclusion>
                        <artifactId>*</artifactId>
                        <groupId>*</groupId>
                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
                <groupId>com.buschmais.jqassistant.plugin</groupId>
                <artifactId>maven3</artifactId>
                <version>${jqa-maven3-plugin.version}</version>
            </dependency>
            <dependency>
                <groupId>com.buschmais.jqassistant.plugin</groupId>
                <artifactId>maven3</artifactId>
                <version>${jqa-maven3-plugin.version}</version>
                <type>zip</type>
                <classifier>asciidoc</classifier>
                <scope>provided</scope>
                <exclusions>
                    <exclusion>
                        <artifactId>*</artifactId>
                        <groupId>*</groupId>
                    </exclusion>
                </exclusions>
            </dependency>

            <!--
             ! Dependency to the documentation sources of the commandline tool.
             !-->
            <dependency>
                <groupId>com.buschmais.jqassistant.cli</groupId>
                <artifactId>parent</artifactId>
                <version>${jqa-commandline-tool.version}</version>
                <type>zip</type>
                <classifier>asciidoc</classifier>
                <scope>provided</scope>
                <exclusions>
                    <exclusion>
                        <artifactId>*</artifactId>
                        <groupId>*</groupId>
                    </exclusion>
                </exclusions>
            </dependency>

            <!--
             ! Dependency to the documentation sources of the Maven plugin.
             !-->
            <dependency>
                <groupId>com.buschmais.jqassistant</groupId>
                <artifactId>jqassistant-maven-plugin</artifactId>
                <version>${jqa-maven-plugin.version}</version>
                <type>zip</type>
                <classifier>asciidoc</classifier>
                <scope>provided</scope>
                <exclusions>
                    <exclusion>
                        <artifactId>*</artifactId>
                        <groupId>*</groupId>
                    </exclusion>
                </exclusions>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <repositories>
        <repository>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <id>sonatype-nexus-snapshots</id>
            <name>Sonatype Nexus Snapshots</name>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
        </repository>
    </repositories>

</project>
