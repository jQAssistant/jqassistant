    <scm>
        <connection>scm:git:git@github.com:jqassistant/jqa-manual.git</connection>
        <developerConnection>scm:git:git@github.com:jqassistant/jqa-manual.git</developerConnection>
        <url>https://github.com/jqassistant/jqa-manual</url>
      <tag>HEAD</tag>
